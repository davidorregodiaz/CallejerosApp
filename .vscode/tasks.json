{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Adoption.API",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/src/Adoption.API/Adoption.API.csproj",
                "--configuration",
                "Debug",
                "--no-restore"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build Identity.API",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/src/Identity.API/Identity.API.csproj",
                "--configuration",
                "Debug",
                "--no-restore"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run Adoption.API",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/Adoption.API/Adoption.API.csproj"
            ],
            "group": "none",
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "run Identity.API",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/Identity.API/Identity.API.csproj"
            ],
            "group": "none",
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}